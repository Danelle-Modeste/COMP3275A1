<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uwi.sta.comp3275a1.UIComponents"
    tools:showIn="@layout/activity_uicomponents">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/txt_reg"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Form"
        android:id="@+id/txt_frm"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A test registration form to demo UI elements"
        android:id="@+id/txt_desc"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPLE BUTTON"
        android:id="@+id/btn_simple"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/txt_username"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="22dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/txt_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="22dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_email"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:layout_marginTop="15dp"
        android:textSize="22dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_sex">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/btn_male" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18dp"
            android:id="@+id/btn_female" />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btn_save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:onClick="SaveUserData" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_save"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:id="@+id/txt_uname"
            android:layout_gravity="left"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_show_uname"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/txt_uname"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/txt_pword"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/txt_uname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_show_pword"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/txt_pword"
            android:layout_below="@id/txt_uname"
            android:layout_alignLeft="@id/txt_show_uname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/txt_usr_email"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/txt_pword"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_show_email"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/txt_usr_email"
            android:layout_below="@id/txt_pword"
            android:layout_alignLeft="@id/txt_show_uname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex:"
            android:id="@+id/txt_sex"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/txt_usr_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_show_sex"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/txt_show_uname"
            android:layout_toEndOf="@+id/txt_sex"
            android:layout_below="@id/txt_usr_email"/>
    </RelativeLayout>
</LinearLayout>
